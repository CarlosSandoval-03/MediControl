<div class="row register-form">
	<div class="col-md-8 offset-md-2">
		<form class="custom-form" action="/user/newAppointment" method="POST">
			<h1>Agenda tu cita</h1>
			<div class="row form-group">
				<div class="col-sm-4 label-column">
					<label class="col-form-label" for="dropdown-department">√Årea de
						especialidad
					</label>
				</div>
				<div class="col-sm-4 input-column">
					<div class="dropdown">
						<select
							name="department"
							id="dropdown-department"
							class="btn btn-light dropdown-toggle"
						>
							{{#each departments}}
								<option class="dropdown-item" value="{{this}}" selected>
									{{formatOption this}}
								</option>
							{{/each}}
						</select>
					</div>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-4 label-column">
					<label class="col-form-label" for="appointment_date">Fecha para la
						cita
					</label>
				</div>
				<div class="col-sm-6 input-column">
					<input
						class="form-control"
						name="date"
						type="date"
						id="appointment_date"
						required
					/>
				</div>
			</div>
			<button class="btn btn-light submit-button" onclick="saveLocalStorage()">
				Siguiente
			</button>
		</form>
	</div>
</div>
{{{loadAppointmentFormScript}}}