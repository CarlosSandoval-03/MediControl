<div class="row register-form">
	<div class="col-md-8 offset-md-2">
		<form class="custom-form" action="/user/createAppointment" method="POST">
			<h1>Agenda tu cita</h1>
			<div class="row form-group">
			</div>
			<div class="row form-group">
				<div class="col-sm-4 label-column">
					<label class="col-form-label" for="dropdown-departament">√Årea de
						especialidad
					</label>
				</div>
				<div class="col-sm-4 input-column">
					<div class="dropdown">
						<select
							name="departament"
							id="dropdown-departament"
							class="btn btn-light dropdown-toggle"
						>
							<option class="dropdown-item" value="medicina_general" selected>
								Medicina General
							</option>
							<option class="dropdown-item" value="pediatria">
								Pediatria
							</option>
						</select>
					</div>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-4 label-column">
					<label class="col-form-label" for="appointment_date">Fecha para la
						cita
					</label>
				</div>
				<div class="col-sm-6 input-column">
					<input
						class="form-control"
						name="date"
						type="date"
						id="appointment_date"
						required
					/>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-4 label-column">
					<label class="col-form-label" for="dropdown-doctor">Doctor
					</label>
				</div>
				<div class="col-sm-4 input-column">
					<div class="dropdown">
						<select
							name="doctor"
							id="dropdown-doctor"
							class="btn btn-light dropdown-toggle"
							style="pointer-events: none; cursor: not-allowed;"
						>
							<option
								selected
								value="{{doctorInfo.username}}"
							>{{doctorInfo.first_name}}
								{{doctorInfo.last_name}}
							</option>
						</select>
					</div>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-4 label-column">
					<label class="col-form-label" for="dropdown-hour">
						Horas Disponibles
					</label>
				</div>
				<div class="col-sm-4 input-column">
					<div class="dropdown">
						<select
							name="hour"
							id="dropdown-hour"
							class="btn btn-light dropdown-toggle"
							required
						>
							{{{createHourSlots listHoursFiltered}}}
						</select>
					</div>
				</div>
			</div>
			<button class="btn btn-light submit-button">
				Solicitar
			</button>
		</form>
	</div>
</div>
{{{getLocalStorage}}}