<div class="row register-form">
	<div class="col-md-8 offset-md-2">
		<form class="custom-form" action="/user/createTicket" method="POST">
			<h1>Solicitar Turno</h1>
			<div class="row form-group">
			</div>
			<div class="row form-group">
				<div class="col-sm-4 label-column">
					<label
						class="col-form-label"
						for="departament_input"
					>Departamento</label>
				</div>
				<div class="col-sm-4 input-column">
					<div class="dropdown">
						<select
							name="departament"
							id="departament_input"
							class="btn btn-light dropdown-toggle"
						>
							<option class="dropdown-item" value="urgencias" selected>
								Urgencias
							</option>
							<option class="dropdown-item" value="farmacia">
								Farmacia
							</option>
						</select>
					</div>
				</div>
			</div>
			<button class="btn btn-light submit-button">
				Solicitar
			</button>
		</form>
	</div>
</div>